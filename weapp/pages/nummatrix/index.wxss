.container {
    width: 454rpx;
    height: 454rpx;
    border: 15rpx solid #4b49b3;
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-content: space-between;
    border-radius: 20rpx;
    margin-top: 10rpx;
}

.home {
    width: 200rpx;
    height: 80rpx;
    background: #0066ff;
    color: #fff;
    border-radius: 10rpx;
    font-size: 36rpx;
    margin: 30rpx 50rpx;
}
.home_active {
    width: 200rpx;
    height: 80rpx;
    background: #fff;
    color: #0066ff;
    border: 4rpx solid #0066ff;
    border-radius: 10rpx;
    font-size: 36rpx;
    margin: 30rpx 50rpx;
}

.v1 {
    font-weight: 600;
    position: relative;
    background-color: #b8c0ce;
}

.v1 view {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 10;
}

.v2 {
    background: #fff;
}

.v3 {
    font-size: 32rpx;
    margin: 20rpx 0;
}


.game {
    width: 400rpx;
    height: 80rpx;
    background: #0066ff;
    color: #fff;
    border-radius: 10rpx;
    font-size: 36rpx;
    margin: 10rpx 0;
}

